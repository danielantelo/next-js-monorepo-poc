{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended", "prettier", "plugin:jest/recommended"],
  "plugins": [
    "import",
    "prettier",
    "react",
    "react-hooks",
    "jest",
    "simple-import-sort",
    "eslint-comments",
    "jsx-a11y"
  ],
  "overrides": [
    {
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}
